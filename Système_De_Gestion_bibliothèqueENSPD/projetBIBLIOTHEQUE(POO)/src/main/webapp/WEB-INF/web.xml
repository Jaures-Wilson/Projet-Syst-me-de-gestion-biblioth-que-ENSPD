    <servlet-name>AjouterLivreServlet</servlet-name>
    <!-- Classe Java qui implémente le servlet -->
    <servlet-class>servlet.AjouterLivreServlet</servlet-class>
  </servlet>
  <!-- Association d’un chemin URL au servlet -->
  <servlet-mapping>
    <servlet-name>AjouterLivreServlet</servlet-name>
    <!-- URL à taper pour accéder à ce servlet -->
    <url-pattern>/AjouterLivreServlet</url-pattern>
  </servlet-mapping>

